{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<main class="flex items-center justify-center h-[80vh] px-4 flex-grow">
    <div class="flex bg-gray-800 dark:bg-gray-300 p-6 rounded-lg shadow-lg w-full max-w-3xl m-4">
        <div class="w-1/2 hidden md:block">
            <img src="{{ asset('images/1.jpg') }}" alt="Crypto Image" class="w-[288px] h-[288px] md:w-[320px] md:h-[370px] rounded-lg">
        </div>
        <div class="w-full md:w-1/2 px-4 flex flex-col justify-center">
            <h2 class="text-2xl font-bold text-center mb-4">Connexion</h2>
            <form action="{{ path('app_login_send') }}" method="POST">
                <div class="mb-4">
                    <label class="block text-gray-400 dark:text-gray-600">Email</label>
                    <input type="email" name="email" placeholder="Entrez votre email" class="w-full p-2 rounded bg-gray-700 dark:bg-gray-200 text-white dark:text-black" required>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-400 dark:text-gray-600">Mot de passe</label>
                    <input type="password" name="password" placeholder="Entrez votre mot de passe" class="w-full p-2 rounded bg-gray-700 dark:bg-gray-200 text-white dark:text-black" required>
                </div>
                <button type="submit" class="w-full bg-blue-700 text-white dark:bg-blue-500 p-2 rounded">Se connecter</button>
            </form>
            <p class="text-center mt-4 text-gray-400 dark:text-gray-600">Pas encore de compte ? <a href="{{ path('page_register') }}" class="text-blue-500">Inscrivez-vous</a></p>
            <p class="text-center mt-4 text-gray-400 dark:text-gray-600"><a href="{{ path('app_reset_send') }}" class="text-blue-500">RÃ©initialiser nombre de tentative</a></p>
        </div>
    </div> 
</main>
{% if error is defined %}
    <script>
        Swal.fire({
        icon: "error",
        title: "Oops...",
        text: "{{ error|raw }}"
        });
    </script>
{% endif %}
{% if success is defined %}
    <script>
        Swal.fire({
        position: "top-end",
        icon: "success",
        title: "{{ success|raw }}",
        showConfirmButton: false,
        timer: 1500
        });
    </script>
{% endif %}
{% endblock %}
