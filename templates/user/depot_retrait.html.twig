<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Depot / Retrait</title>
    <link rel="stylesheet" href="{{ asset('css/bootstrap/bootstrap.min.css') }}">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Depot / Retrait</h1>

        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}

        <form method="POST" action="{{ path('user_depot_retrait', {'id': user.idUsers}) }}">
            <div class="mb-3">
                <label for="somme" class="form-label">Montant</label>
                <input type="number" class="form-control" id="somme" name="somme" required>
            </div>

            <div class="mb-3">
                <label for="operation" class="form-label">Type d'opération</label>
                <select class="form-control" id="operation" name="operation" required>
                    <option value="depot">Dépôt</option>
                    <option value="retrait">Retrait</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Valider</button>
        </form>

        <hr>

        <h2>Historique des mouvements</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Montant</th>
                    <th>Date du mouvement</th>
                    <th>Type</th>
                    <th>Statut</th>
                </tr>
            </thead>
            <tbody id="mouvement-list">
                {% for mouvement in mouvementsSolde %}
                    <tr>
                        <td>{{ mouvement.idMouvementSolde }}</td>
                        <td>{{ mouvement.somme }}</td>
                        <td>{{ mouvement.dateMouvement|date("Y-m-d H:i:s") }}</td>
                        <td>{{ mouvement.estDepot ? 'Dépôt' : 'Retrait' }}</td>
                        <td>{{ mouvement.statut }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <script>
        function updateMouvementList(mouvement) {
            const tableBody = document.getElementById('mouvement-list');
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td>${mouvement.id}</td>
                <td>${mouvement.somme}</td>
                <td>${mouvement.date_mouvement}</td>
                <td>${mouvement.est_depot}</td>
                <td>${mouvement.statut}</td>
            `;
            tableBody.appendChild(newRow);
        }

        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault(); 

            const formData = new FormData(this);
            const url = this.action;

            fetch(url, {
                method: 'POST',
                body: formData,
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === 'success') {
                    alert(data.message);
                    updateMouvementList(data.mouvement); // Mettre à jour la liste avec le nouveau mouvement
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
            });
        });
    </script>
</body>
</html>
