{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<main class="flex items-center justify-center h-[80vh] px-4 flex-grow">
    <div class="flex bg-gray-800 dark:bg-gray-300 p-6 rounded-lg shadow-lg w-full max-w-4xl m-4 animate__animated animate__fadeInUp">
        <div class="w-full md:w-1/2 px-4">
            <h2 class="text-2xl font-bold text-center mb-4">Inscription</h2>
            <form method="POST" action="{{ path('send_register') }}" id="registerForm">
                <div class="mb-4">
                    <label class="block text-gray-400 dark:text-gray-600">Nom</label>
                    <input type="text" name="nom" placeholder="Entrez votre nom" class="w-full p-2 rounded bg-gray-700 dark:bg-gray-200 text-white dark:text-black" required>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-400 dark:text-gray-600">Prénom</label>
                    <input type="text" name="prenom" placeholder="Entrez votre prenom" class="w-full p-2 rounded bg-gray-700 dark:bg-gray-200 text-white dark:text-black" required>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-400 dark:text-gray-600">Email</label>
                    <input type="email" name="email" placeholder="Entrez votre email" class="w-full p-2 rounded bg-gray-700 dark:bg-gray-200 text-white dark:text-black" required>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-400 dark:text-gray-600">Date de Naissance</label>
                    <input type="date" name="dateNaissance" placeholder="Date de Naissance" class="w-full p-2 rounded bg-gray-700 dark:bg-gray-200 text-white dark:text-black" required>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-400 dark:text-gray-600">Mot de passe</label>
                    <input type="password" name="password" placeholder="Entrez votre mot de passe" class="w-full p-2 rounded bg-gray-700 dark:bg-gray-200 text-white dark:text-black" required>
                </div>
                <button type="submit" class="w-full bg-blue-700 text-white dark:bg-blue-500 p-2 rounded">S'inscrire</button>
            </form>
            <p class="text-center mt-4 text-gray-400 dark:text-gray-600">Déjà inscrit ? <a href="{{ path('page_login') }}" class="text-blue-500">Connectez-vous</a></p>
        </div>
        <div class="w-1/2 hidden md:block">
            <img src="{{ asset('images/1.jpg') }}" alt="Crypto Image" class="w-[288px] h-[288px] md:w-[320px] md:h-[370px] rounded-lg">
        </div>
    </div>  
</main>
{% if error is defined %}
    <script>
        Swal.fire({
        icon: "error",
        title: "Oops...",
        text: "{{ error|raw }}"
        });
    </script>
{% endif %}
{% if success is defined %}
    <script>
        Swal.fire({
        title: "{{ success|raw }}",
        icon: "success",
        draggable: true
        });
    </script>
{% endif %}
{% endblock %}