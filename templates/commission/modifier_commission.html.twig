{# templates/commission/modifier_commission.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier la commission{% endblock %}

{% block body %}
    <h1>Modifier la commission</h1>

    {# Affichage du message de succ√®s #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    {# Formulaire pour modifier la commission #}
    <form method="POST">
        <div class="form-group">
            <label for="valeur_historique_pourcentage">Nouveau pourcentage de commission</label>
            <input type="number" id="valeur_historique_pourcentage" name="valeur_historique_pourcentage" 
                   class="form-control" value="{{ historiqueCommission.valeurHistoriquePourcentage }}" step="0.01" required>
        </div>

        <button type="submit" class="btn btn-primary">Sauvegarder</button>
    </form>
{% endblock %}
