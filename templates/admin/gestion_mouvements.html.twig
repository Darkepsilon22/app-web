<!-- templates/admin/gestion_mouvements.html.twig -->

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Mouvements</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Gestion des Mouvements</h1>

        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th scope="col">Utilisateur</th>
                    <th scope="col">Montant</th>
                    <th scope="col">Type d'opération</th>
                    <th scope="col">Statut</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for mouvement in mouvements %}
                    <tr>
                        <td>{{ mouvement.user.prenom }} {{ mouvement.user.nom }}</td>
                        <td>{{ mouvement.somme }}</td>
                        <td>{{ mouvement.estDepot ? 'Dépôt' : 'Retrait' }}</td>
                        <td>{{ mouvement.statut }}</td>
                        <td>
                            {% if mouvement.statut == 'en_attente' %}
                                <a href="{{ path('admin_valider_mouvement', {'id': mouvement.idMouvementSolde}) }}" class="btn btn-success">Valider</a>
                                <a href="{{ path('admin_refuser_mouvement', {'id': mouvement.idMouvementSolde}) }}" class="btn btn-danger">Refuser</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>
