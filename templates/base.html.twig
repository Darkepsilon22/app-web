        <!-- Bouton menu pour mobile -->
        <button id="menu-btn" class="md:hidden text-gray-400 dark:text-gray-600 focus:outline-none">
            <i class="fas fa-bars text-xl icon-rotate"></i>
        </button>
        {% if user is defined %}
